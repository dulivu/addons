<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-extend="HrAttendanceKioskMode">
        <t t-jquery="h1" t-operation="after">
            <div id="cam" style="margin:auto;"></div>
            <script>
                Webcam.set({
                    width: '320',
                    height: '240',
                    image_format: 'jpeg',
                    jpeg_quality: 33
                });
                Webcam.attach('#cam');
            </script>
        </t>
    </t>
</templates>